@model Bangazon.Models.ProductViewModels.ProductTypesViewModel

    <h2>Product Categories</h2>
      
            @foreach (var item in Model.GroupedProducts)
            {

    <h3 style="display: inline"><a asp-controller="ProductTypes" asp-action="Details" asp-route-id="@item.TypeId"> @Html.DisplayFor(model => item.TypeName) </a></h3><h4 style="display: inline">(@Html.DisplayFor(modelItem => item.ProductCount))</h4>

                <ul style="list-style: none">
                    @foreach (var prod in item.Products)
                    {
                    <li><a asp-action="Details" asp-route-id="@prod.ProductId"><h5>@Html.DisplayFor(model => prod.Title)</h5></a></li>
                    }
                </ul>

            }